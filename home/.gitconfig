[core]
    pager = delta
    editor = nvim

[interactive]
    diffFilter = delta --color-only

[diff]
    context = 8
    functionContext = true
    algorithm = histogram

[delta]
    side-by-side = true
    navigate = true
    dark = true
    line-numbers = true
    hunk-header-style = "syntax bold"

[merge]
    conflictStyle = zdiff3

[include]
    path = ~/.gitconfig.local
